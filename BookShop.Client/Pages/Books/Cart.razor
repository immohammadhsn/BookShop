                 <h1>welcome to cart</h1>

    <div class="container">
        <StatusMessage @ref="_StatusMessage"/>
        <div class="container-books">
            @foreach (var book in BooksInCart)
            {

                <div class="img-one cont-1 row">
                    <div class="book-details col-4">
                        <img src="@book.Img" class="imgg im-hov">
                    </div>

                    <div class="info-one col-2">
                        <p>@book.Title</p>
                        <p></p><p></p><p></p><p></p>
                        <button class="btn btn-danger" @onclick="()=>DeleteBook(book)">Delete</button>
                    </div>
                    <div class="info-two col-2">
                        @if (book.BookStatus == BookStatus.Buyed)
                        {
                            <p>@Enum.GetName(book.BookStatus)</p>
                            <p>Book price: @book.Price</p>
                            <p>Number of copies: @book.SoldQuantity</p>
                            <p>Shipping: 30 L.E</p>
                            <p>Total: @book.TotalPrice L.E</p>
                        }
                        else
                        {
                            <p>@Enum.GetName(book.BookStatus)</p>
                            <p>Borrowing price: @book.BorrowingPrice</p>
                            <p>Number of copies: @book.BorrowingPeriod</p>
                            <p>Total: @book.TotalPrice L.E</p>
                        }
                    </div>
                </div>
            }
             <div class="row">
            <div class="col-md-12 text-center">
                <p class="font-weight-bold">Total Order Price: @CalculateTotalPrice() L.E</p>
            </div>
        </div>

        <!-- Add Button to Submit Order -->
        <div class="row">
            <div class="col-md-12 text-center">
                <button class="btn btn-primary" @onclick="()=>SubmitOrder()">Submit Order</button>
            </div>
        </div>
        </div>
    </div>    

    <!-- -Footer Section--->
